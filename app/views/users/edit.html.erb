
<section class="section-top new-room">
  <div class="register-box">
    <h4>ユーザー情報編集</h4>
    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, placeholder: '名前を入力'%>

      <%= f.label :emain, 'Eメール' %>
      <%= f.email_field :email, placeholder: 'メールアドレスを入力'%>
      
      <%= f.label :introduction, '自己紹介' %>
      <%= f.text_area :introduction, placeholder: '自己紹介を入力'%>
      
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password %>
      
      <%= f.label :password_confirmation, 'パスワード再入力' %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit '更新!', class: 'top-button' %>
    <% end %>
  </div>
</section>
