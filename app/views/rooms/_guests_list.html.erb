<% if room.reservations.present? %>
  <h3>このルームの予約情報</h3>
  <table class="guests_list">
    <tr>
      <th>ゲスト名</th>
      <th>チェックイン / チェックアウト</th>
      <th>人数</th>
      <th>合計金額</th>
      <th>予約完了日</th>
    </tr>
      
    <% room.reservations.each do |reservation| %>
      <tr>
        <td><%= link_to reservation.user.name, reservation.user %></td>
        <td><%= reservation.start_date %> / <%= reservation.end_date %></td>
        <td><%= reservation.guests %></td>
        <td>¥ <%= reservation.total_fee %></td>
        <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>  
  </table> 
<% else %>
  <h3>このルームの予約情報はありません</h3>
<% end %>
  


